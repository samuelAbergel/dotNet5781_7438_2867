<Window x:Class="PL.listBusWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
         Title="page2" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="127*"/>
            <RowDefinition Height="295*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Left" Height="100" Margin="-86,2,0,0" VerticalAlignment="Top" Width="100" Grid.Row="1"/>
        <Rectangle Margin="0,0,0,5" >
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#4579a3" Offset="1" />
                    <GradientStop Color="#044d74" Offset="0.55" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image  Source="images/LOGON.png" Margin="322,9,296,283.5" Grid.RowSpan="2" />

        <ListView Grid.Row="1" x:Name="busList"
  ItemsSource="{Binding}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
        DisplayMemberBinding="{Binding LicenseNum}"
        Header="LicenseNum" />
                    <GridViewColumn
        DisplayMemberBinding="{Binding FromDate}"
        Header="FromDate" />
                    <GridViewColumn
        DisplayMemberBinding="{Binding TotalTrip}"
        Header="TotalTrip" />
                    <GridViewColumn
        DisplayMemberBinding="{Binding FuelRemain}"
        Header="FuelRemain" />
                    <GridViewColumn
        DisplayMemberBinding="{Binding Status}"
        Header="Status" />
                    <GridViewColumn
        Header="Options">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox
              Width="100">
                                    <Button Content="refuelling" />
                                    <Button Content="treatment"/>
                                </ComboBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
